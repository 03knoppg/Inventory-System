/* Container */
.container {
  width: 1200px;
  background: white ;
  padding: 60px;
  padding-top: 20px;
  padding-bottom: 20px;
  margin-top: 10px;
  margin-bottom: 10px;
  overflow:hidden;
}

.inner_container {
  height: 680px;
  //height: 100%;
  background: white ;
  padding:5px;
  padding-right: 20px;
  //overflow-x:hidden;
  //overflow-y:scroll;

}

.inner_container > div {
    overflow: hidden;
}

.pop_container{
    width: 100%;
    height: 100%;
}

.containerBanner{
    width:1200px;
    height: 100px;
    background: white;
    padding: 0px;
    padding-top: 0px;
    padding-bottom: 0px;
