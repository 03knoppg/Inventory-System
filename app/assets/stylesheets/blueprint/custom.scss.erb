.container {
  width: 1200px;
  background: white url("/assets/3di_media_server.png") no-repeat top left;
  padding: 60px;
  padding-top: 120px;
  padding-bottom: 20px;
  margin-top: 15px;
  margin-bottom: 15px;
}

.containerLinks {
   width:100px;
   background: teal;
   float: right;
}

body {
  background: #cff;
}

header {
  padding-top: 20px;
}

header img {
  padding: 1em;
  background: #fff;
}

section {
  margin-top: 1em;
  font-size: 120%;
  padding: 20px;
  background: #fff;
}

h1 {
  font-size: 300%;
  border-bottom: 1px #333 solid;
  padding-bottom: 5px;
}

h2 {
    font-size: 175%;
    font-weight: bold;
    border-bottom: 1px #333 solid;
    margin-bottom: 5px;
}

h4 {
  font-size: 150%;
  padding-top: 20px;
  margin-bottom: 5px;
}

/* Buttons */

.button_to {
  float: left;
  padding-right: 5px;
}

/* Clear */
.clear {
  clear: both;
}

/*Tables */

th{ font-size: 150%;
    border-bottom: 1px #333 solid;
    padding-bottom: 1px;
}

td{
    vertical-align: top;
}

/* Navigation */

nav {
  float: right;
}

nav {
  background-color: #cff;
  padding: 0 0.7em;
  white-space: nowrap;
}

nav ul {
  margin: 0;
  padding: 0;
}

nav ul li {
  list-style-type: none;
  display: inline-block;
  padding: 0.2em 0;
}

nav ul li a {
  padding: 0 5px;
  font-weight: bold;
}

nav ul li a:visited {
  color: blue;
}

nav ul li a:hover {
  text-decoration: underline;
}
