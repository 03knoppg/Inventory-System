    margin-bottom: 20px;
}

.containerLinks {
   width:100px;
   background: teal;
   float: right;
   font-size: 15px;
}

/* Html */
body {
  background: #cff;
}

header {
  padding-top: 20px;
}

header img {
  padding: 1em;
  background: #fff;
}

section {
  margin-top: 1em;
  font-size: 120%;
  padding: 20px;
  background: #fff;
}

/* Headers */
.title_header {
    font-size: 300%;
    border-bottom: 1px #333 solid;
    margin:0px;
    padding-bottom:5px;
}
.sub_title_header {
    font-size:250%;
    border-bottom: 1px #333 solid;
    margin-bottom:5px;
    padding-bottom:5px;
    padding-top:5px;
    width:relative;
}
h1 {
  font-size: 300%;
  border-bottom: 1px #333 solid;
  padding-bottom: 5px;
  padding-top:0px;
  margin-left:5px;
  margin-right:5px;
}

h1.tight_h1 {
  font-size: 300%;
  border-bottom: 1px #333 solid;
  padding-bottom: 5px;
  padding-top:0px;
  margin-left:5px;
  margin-right:5px;
  margin-bottom:0;
}

h2 {
    font-size: 175%;
    font-weight: bold;
    border-bottom: 1px #333 solid;
    margin-bottom: 5px;
}


h4 {
  font-size: 125%;
  padding-top: 20px;
  margin-bottom: 5px;
}

h5{
    font-size: 100%;
    font-weight:bold;
}

/* Div */

.main_div {
  padding:20px;
  border-width:3px;
  border-spacing:2px;
  border-style:solid;
}

.right_div {
  float:right;
  padding-top:10px;
}

.inner_scroll_div{
  height:300px;
  width:100%;
  overflow:auto;
  border:1px solid;
}

.new_button_div{
    padding-top:20px;
    padding-bottom:20px;
}

.error_div {
   color: red;
}

/* Buttons */

.button_to {
  float: left;
  padding-right: 5px;

}

/* Clear */
.clear {
  clear: both;
}

/*Tables */
table {
    table-layout:fixed;
    border-spacing:2px;
}

.tight_table{
    margin:0;
    padding:0;
}
th{ font-size: 20px;
    border-bottom: 1px #333 solid;
    padding-bottom: 1px;
    font-weight:normal;
}
.main_table  {
    border-width:5px;
    border-style:ridge;
}
.inner_table {
    border-width:2px;
    border-style:double;
}

td{
  font-family:Tahoma, Geneva, sans-serif;
  font-size:15px;
  vertical-align: top;
}

.td_two_col {
    width:500px;
}

/* Navigation */

nav {
  float: right;
}

nav {
  background-color: #cff;
  padding: 0 0.7em;
  white-space: nowrap;
}

nav ul {
  margin: 0;
  padding: 0;
}

nav ul li {
  list-style-type: none;
  display: inline-block;
  padding: 0.2em 0;
}

nav ul li a {
  padding: 0 5px;
  font-weight: bold;
}

nav ul li a:visited {
  color: blue;
}

nav ul li a:hover {
  text-decoration: underline;
}
  html {
	overflow: scroll;
}
