<p id="notice"><%# notice %></p>
<h1>Viewing <%= @category_alias %>: <%=@category.name%></h1>
<div class="main_div">
  <table class="main_table">
    <tr>
      <th align="left">Name</th>
      <th align="left">Parent</th>
    </tr>
    <tr>
      <td class="td_two_col"><%= @category.name %></td>
      <td><%if(!@parent.nil?)%><%= link_to @parent.name, @parent %><%end%></td>
    </tr>
  </table>
  <h2>Associations</h2>
  <!-- the tabs -->
  <ul class="tabs2">
    <li><a href="#">Child <%= @category_alias %></a></li>
     <li><a href="#"><%= @product_alias %></a></li>
  </ul>
  <!-- tab "panes" -->
  <div class="panes2">
    <div> <!--pane 1 -->
      <%= print_child_categories_table(@category).html_safe %>
    </div>
    <div><!--pane 2 -->
      <%= print_products_table(@category).html_safe %>
    </div>
  </div>
</div>


    <div class="right_div">
  <%= button_to "Edit " + @category_alias, "categories/edit", :object => @category,:controller => :categories, :method => :get %>
  <%= button_to "Delete " + @category_alias, {:controller => :categories, :action => "destroy", :id => @category.id, :style=>"display:inline"},  :confirm => "Are You sure?", :method => :delete%>
  <%= button_to "Duplicate "+ @category_alias, new_category_path + "?duplicate_category=#{@category.id}"%>

</div>

