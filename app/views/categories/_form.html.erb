<%= form_for(@category) do |f| %>
    <% if @category.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
          <ul>
            <% @category.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="main_div">
      <table class="main_table">
        <tr>
          <th align="left">Parent&nbsp;<span style="color: red">*</span></th>
          <th align="left">Name&nbsp;<span style="color: red">*</span></th>
        </tr>
        <tr>
          <td class="td_two_col">
            <div class ="field">
              <%= checkbox_accord(all_category_hash, "category").html_safe  %>
            </div>
          </td>
          <td>
            <div class="field">
              <%= f.text_field :name, :required => true, :size=>20 %>
            </div>
          </td>
        </tr>
      </table>
    </div>
    <div class="right_div">
      <%= f.submit %>
    </div>
<% end %>
<h5>Required fields are marked with <span style="color: red">*</span></h5>
<br class="clear" />
