<p id="notice"><%= notice %></p>
 <h1>Viewing Category</h1>
 <%= button_to "Edit Category", edit_category_path(@category), :method => :get %>
<table>
  <tr>
    <th align="left">Category Name:</th>
    <th align="left">Category Parent:</th>
  </tr>
  <tr>
    <td><%= @category.name %></td>
    <td><%if(@parent != nil)%><%= link_to @parent.name, @parent %><%end%></td>
  </tr>
</table>

<h4> Products related to this Category </h4>
<%= button_to "New Product", new_product_path, :method => :get %>
<% for cat in @all_categories %>
 <% print_related_products(cat) %>
 <%end%>
