<p id="notice"><%# notice %></p>
 <h1>Viewing Value: <%=@valuefield.fieldvalue%></h1>
<div class="main_div">
<table class="main_table">
  <tr>
    <th align="left">Value</th>
    <th align="left">Code</th>
  </tr>
  <tr>
    <td><%= @valuefield.fieldvalue %></td>
    <td><%= @valuefield.code %></td>
  </tr>
</table>
   <!-- the tabs -->
  <ul class="tabs">
    <li><a href="#">Associations</a></li>
    <li><a href="#">Attachments</a></li>
  </ul>

  <!-- tab "panes" -->
  <div class="panes">


    <div> <!--pane 1 -->

  <%= print_products_table(@valuefield).html_safe %>
  <%= print_property_table(@valuefield).html_safe %>
  <%= print_components_table(@valuefield).html_safe %>

<%if(@valuefield.components.empty? && @valuefield.products.empty?)%>
<%= print_path_table(@valuefield).html_safe %>
    <%end%>
      </div>
    <div> <!-- pane 2 -->

  <%= print_images_table(@valuefield).html_safe %>
  <%= print_datafiles_table(@valuefield).html_safe %>
         </div>
    </div>



    </div>
<div class="right_div">
   <%= button_to 'Edit Value', edit_valuefield_path(@valuefield), :method => :get %>
   <%=button_to "Delete Value", {:controller => :valuefields, :action => "destroy", :id => @valuefield.id }, :confirm => "Are You sure?", :method => :delete%>
   <%= button_to "Duplicate Value", new_valuefield_path + "?duplicate_value=#{@valuefield.id}"%>
</div>

