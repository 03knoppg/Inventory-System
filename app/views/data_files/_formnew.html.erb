<%= form_for(@data_file, :html => { :multipart => true }) do |f| %>
    <% if @data_file.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@data_file.errors.count, "error") %> prohibited this data_file from being saved:</h2>

          <ul>
            <% @data_file.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <table>
      <tr>
        <th align="left">Select Data File:</th>
        <th align="left">Products</th>
        <th align="left">Components</th>
        <th align="left">Valuefields</th>
        <th align="left">Actions</th>
      </tr>
      <tr>
        <td style="width: 200px">
          <div class ="field">
            <%= f.file_field :filedata, :required => true %>
          </div>
        </td>
        <td>
          <div class="field">
            <select size="5" name="data_file[product_id]" style="width: 200px">
              <% for prod in @all_products %>
                  <option value="<%= prod.id %>">
                    <%= prod.name %>
                  </option>
              <% end %>
            </select>
          </div>
        </td>
        <td>
          <div class="field">
            <select size="5" name="data_file[component_id]" style="width: 200px">
              <% for comp in @all_components %>
                  <%@pt = ""%>
                  <%= components_table(comp, 0, nil) %>
                  <%=@pt.html_safe%>
              <% end %>
            </select>
          </div>
        </td>
        <td>
          <div class="field">
            <select size="5" name="data_file[valuefield_id]" style="width: 200px">
              <%for vf in @all_valuefields %>
                  <option value=<%= vf.id%>>
                    <%= vf.fieldvalue %>
                  </option>
              <% end %>
            </select>
          </div>
        </td>
        <td>
          <div class="actions">
            <%= f.submit %>
          </div>
<% end %>
</td>
</tr>
</table>
<br class="clear" />
