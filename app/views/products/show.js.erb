

$("#products_partial").html("<%= escape_javascript(render('products/popup_show'))%>");

function popup() {

	// if the function argument is given to overlay,
	// it is assumed to be the onBeforeLoad event listener
	var triggers = $("a[rel]").overlay({

		mask: 'lightblue',
		effect: 'apple',

		onBeforeLoad: function() {

			// grab wrapper element inside content
			var wrap = this.getOverlay().find(".contentWrap");

			// load the page specified in the trigger
			wrap.load(this.getTrigger().attr("href"));
		}

	});

    //On Submit closes pop up window and reloads div tag
      $(this).submit(
              function(){
                triggers.overlay().close();
                //$("#products_partial").load(location.href+" #products_partial>*","");
                //$.get("<%=tab_product_path %>", null, 'script');

              }
      );
}

popup();