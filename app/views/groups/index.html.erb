<h1>Listing groups</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.name %></td>
    <td><%= button_to 'Show', group, :method => :get %></td>
    <td><%= button_to 'Edit', edit_group_path(group), :method => :get %></td>
    <td><%= button_to 'Destroy', group, confirm: 'Are you sure?', method: :delete , :method => :get%></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Group', new_group_path, method: :delete , :method => :get %>
