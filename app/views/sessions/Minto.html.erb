
<button type="button" disabled="false">Submit</button>

<Table>

          <tr><th>Block</th><th>Unit Type</th><th>Number</th><th>Price</th><th>Available</th></tr>

<%i = 0
for s in Category.all

       if(s.name == "Minto")
   for suite in s.products
    if( i % 5 == 0)%>

    <%end

        i = i + 1%>

              <tr>
                   <td>
                     <%= suite.name[1] %>
                   </td>
                   <td>
                     <%= suite.name[3..4] %>
                   </td>
                   <td>
                     <%= suite.name[6..7] %>
                   </td>
                   <td>
                     <%= text_field_tag suite.name, suite.valuefields[1].fieldvalue.to_s, :id=>"Text"%>
                   </td>
                   <td>
                     <%= check_box_tag suite.name, suite.name, suite.valuefields[0].fieldvalue == "true" ? true : false, :id=>"CheckBox"%>
                   </td>



              </tr>

        <%end
        end%>
<%end%>

</Table>
<script type="text/javascript">
    jQuery(function($) {


        $('#CheckBox').click(function(){
            $.get("/sessions/update_minto", {id: $(this)[0].name, checked: $(this)[0].checked}, null, 'script');
           $('.button').removeAttr("disabled");

        });

        $('#Text').change(function(){
           $.get("/sessions/update_minto_price", {id: $(this)[0].name, price: $(this)[0].value}, null, 'script');

        });

        $('#Text').click(function(){
            $('.button').removeAttr("disabled");

        });

        $('.button').click(function(){ $(this).addAttr("disabled")});
    });


</script>